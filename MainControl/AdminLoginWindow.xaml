<Window x:Class="MainControl.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         
        xmlns:local="clr-namespace:MainControl"
        mc:Ignorable="d"
        Title="AdminLoginWindow" Height="630.938" Width="891.25">
    <Window.Resources>
        <local:DofInfCollection x:Key="DofInfCollectionKey"/>

        <DataTemplate x:Key="DofInfItemDataTemplate">
            <Canvas Width="600" Height="20">
                <TextBlock FontSize="14" Foreground="DarkSlateGray" TextAlignment="Right"
          Width="80" Canvas.Left="0" Text="{Binding Path=MotorCode0,StringFormat={}{0:N2}}"/>
                <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Canvas.Left="80" Text="{Binding Path=MotorCode1,StringFormat={}{0:N2}}"/>
                <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Canvas.Left="160" Text="{Binding Path=MotorCode2,StringFormat={}{0:N2}}"/>
                <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Canvas.Left="240" Text="{Binding Path=MotorCode3,StringFormat={}{0:N2}}"/>
                <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Canvas.Left="320" Text="{Binding Path=MotorCode4,StringFormat={}{0:N2}}"/>
                <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Canvas.Left="400" Text="{Binding Path=MotorCode5,StringFormat={}{0:N2}}"/>
            </Canvas>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="屏蔽门检测：" HorizontalAlignment="Left" Margin="105.55,131.412,0,0" VerticalAlignment="Top"/>
        <Label Content="屏蔽滑梯检测:" HorizontalAlignment="Left" Margin="105.55,161.652,0,0" VerticalAlignment="Top" Width="98"/>
        <CheckBox x:Name="CbNum0CarDoorShieldCheck" Content="1号车车门" HorizontalAlignment="Left" Margin="225.05,137.412,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CbNum1CarDoorShieldCheck" Content="2号车车门" HorizontalAlignment="Left" Margin="325.05,137.412,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CbNum2CarDoorShieldCheck" Content="3号车车门" HorizontalAlignment="Left" Margin="430.181,137.412,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CbNum3CarDoorShieldCheck" Content="4号车车门" HorizontalAlignment="Left" Margin="528.672,137.412,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CbNum0LadderShieldCheck" Content="1号滑台" HorizontalAlignment="Left" Margin="225.05,167.652,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CbNum1LadderShieldCheck" Content="2号滑台" HorizontalAlignment="Left" Margin="325.05,167.652,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CbNum2LadderShieldCheck" Content="3号滑台" HorizontalAlignment="Left" Margin="430.181,167.652,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CbNum3LadderShieldCheck" Content="4号滑台" HorizontalAlignment="Left" Margin="528.672,167.652,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CbNum4LadderShieldCheck" Content="5号滑台" HorizontalAlignment="Left" Margin="613.672,167.652,0,0" VerticalAlignment="Top"/>
        <Button x:Name="DefiniteNoCheck" Content="确定" HorizontalAlignment="Left" Margin="613.675,435.35,0,0" VerticalAlignment="Top" Width="75" Click="DefiniteNoCheck_Click"/>
        <Button x:Name="BtnDisplayGameStartupBtn" Content="显示游戏启动按钮" HorizontalAlignment="Left" Margin="596.8,459.59,0,0" VerticalAlignment="Top" Width="114.6" Click="BtnDisplayGameStartupBtn_Click"/>
        <Label Content="错误代码：" HorizontalAlignment="Left" Margin="105.55,191.892,0,0" VerticalAlignment="Top"/>
        <DockPanel Margin="159,222,223.8,261.6">
            <TextBlock FontSize="14" Foreground="DarkSlateGray" TextAlignment="Right"
          Width="80"  Text="驱动器1" Height="18" VerticalAlignment="Top"/>
            <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80"  Text="驱动器2" Height="18" VerticalAlignment="Top"/>
            <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Text="驱动器3" Height="18" VerticalAlignment="Top"/>
            <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Text="驱动器4" Height="18" VerticalAlignment="Top"/>
            <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Text="驱动器5" Height="18" VerticalAlignment="Top"/>
            <TextBlock FontSize="14" Foreground="DarkSlateBlue" TextAlignment="Right"
          Width="80" Text="驱动器6" Height="18" VerticalAlignment="Top" />
            <ItemsControl Name="MyListBox" DockPanel.Dock="Top" Background="Silver" Height="75" 
             ItemsSource="{Binding Source={StaticResource DofInfCollectionKey}}"
             ItemTemplate="{StaticResource DofInfItemDataTemplate}" Margin="-480,0,-0.4,0"/>
        </DockPanel>
        <Label Content="1号设备" HorizontalAlignment="Left" Margin="101,239,0,0" VerticalAlignment="Top"/>
        <Label Content="2号设备" HorizontalAlignment="Left" Margin="101,257,0,0" VerticalAlignment="Top"/>
        <Label Content="3号设备" HorizontalAlignment="Left" Margin="101,275,0,0" VerticalAlignment="Top"/>
        <Label Content="4号设备" HorizontalAlignment="Left" Margin="101,293,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
